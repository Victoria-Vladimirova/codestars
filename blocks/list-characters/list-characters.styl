.list-characters
    position relative
    top -294px
    display flex
    justify-content center
    align-items flex-end

    &__item
        position relative
        display flex
        width 320px
        height 673px
        align-items flex-end

    &__button
        font 28px 'Segoe UI'
        position relative
        top 29px
        display block
        width 260px
        height 86px
        text-decoration none
        letter-spacing .4px
        line-height 73px

        &:active .list-characters__button-text
            color #fff
            border 6px solid #fff

        &:hover .list-characters__button-text
            transform rotateX(90deg) translateY(-22px)

            &::before
                background none

    &__button-text
        position relative
        display inline-block
        width 248px
        transition transform 0.3s
        transform-origin 50% 0
        transform-style preserve-3d

        color #00c6ff
        border 6px solid #00c6ff

        line-height 73px

        &::before
            color #00c6ff
            border 6px solid #00c6ff
            position absolute
            top 78px
            left -6px
            width 248px
            height 100%
            line-height 73px
            background rgba(29, 35, 58, .28)
            content attr(data-hover)
            transform rotateX(-90deg)
            transform-origin 50% 0

.characters-container
    position relative

    &:nth-of-type(1)
        left -25px

        .list-characters__item
            background url(images/light.png) -17px -168px no-repeat

            img
                padding 6px 0

        &:hover .list-characters__item
            background url(images/light.png) -1032px -168px no-repeat

        .list-characters__button
            left 42px

    &:nth-of-type(2)
        left 6px

        .list-characters__item
            background url("images/light.png") -368px -168px no-repeat

            img
                padding 6px 27px

        &:hover .list-characters__item
            background url(images/light.png) -1383px -168px no-repeat

        .list-characters__button
            left 23px

    &:nth-of-type(3)
        left 19px

        .list-characters__item
            background url("images/light.png") -701px -168px no-repeat

            img
                padding 6px 11px

        &:hover .list-characters__item
            background url(images/light.png) -1716px -168px no-repeat

        .list-characters__button
            left 19px
